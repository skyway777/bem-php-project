{
    "plugins": ["jscs-bem"],
    "preset": "bem",

    "excludeFiles": [
        ".bem/cache/**",
        ".enb/tmp/**",
        ".git/**",
        "libs/**",
        "node_modules/**",
        "**/*.test.bemhtml/**",
        "*.bundles/**",
        "*.examples/**",
        "*.tests/**",
        "*.specs/**",
        "*.tmpl-specs/**",
        "common.blocks/vow/**",
        "common.blocks/inherit/**",
        "common.blocks/ecma/__array/ecma__array.spec.js",
        "common.blocks/jquery/__event/_type/jquery__event_type_pointerclick.js",
        "*.docs/**/*.bemdecl.js"
    ],
    "fileExtensions": [".js", ".bemtree", ".bemhtml"]
}
